{{!< default}}
{{!-- type de page que j'ai rajouté pour pouvoir avoir des petites images en haut des pages principales du site --}}
{{!-- pour l'instant, le contenu est le copié collé de "narrow feature" --}}

<div class="content-area">
    <main class="site-main">
        {{#post}}
            {{> content width="narrow"}}
        {{/post}}
        {{#is "post"}}
            {{> related}}
            {{> comment}}
        {{/is}}
    </main>
</div>

