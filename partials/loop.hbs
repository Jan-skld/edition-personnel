<article class="feed {{post_class}}" data-month="{{date format="MMMM YYYY"}}">
    <div class="feed-calendar">
        <div class="feed-calendar-day"> {{!-- ici, j'ai permuté le mois et le jour (donc les deux blocs suivants) --}}
            {{date published_at format="DD"}}
        </div>
        <div class="feed-calendar-month">
            {{date published_at format="MMM"}}
        </div>
    </div>
    <div class="feed-image u-placeholder rectangle">
        {{#if feature_image}}
            <img class="u-object-fit"
                srcset="{{> srcset}}"
                sizes="(min-width: 576px) 160px, 90vw"
                src="{{img_url feature_image size="m"}}"
                alt="{{title}}" loading="lazy">
        {{/if}}
    </div>
    <div class="feed-wrapper">
        <h2 class="feed-title">{{title}}</h2>
        {{#if excerpt}}
            <div class="feed-excerpt">{{excerpt words="20"}}</div>
        {{/if}}
        <div class="feed-right">
            <time class="feed-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date published_at}}
            </time>
            <div class="feed-visibility feed-visibility-{{visibility}}">
                {{> icons/star}}
            </div>
            {{#if reading_time}}
                <div class="feed-length">
                    {{reading_time minute="1 minute de lecture" minutes="% minutes de lecture"}} <!-- modifié pour que le temps soit en français (tuto sur ghost.org). Avant, il y avait seulement reading_time -->
                </div>
            {{/if}}
            <div class="feed-icon">
                {{> icons/chevron-right}}
            </div>
        </div>
    </div>
    <a class="u-permalink" href="{{url}}" aria-label="{{title}}"></a>
</article>